<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <div class="text-is-center is-size-2">Forgot your password?</div>
        <div class="box">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
        <div class="field">
          <div class="control">
            <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "email", class: 'input' },
              wrapper: false %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.button :submit, "Send me reset password instructions", class: 'button is-primary input' %>
          </div>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
